<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginTestAppMaui.Views.MainPage"
             xmlns:viewmodel="clr-namespace:LoginTestAppMaui.ViewModels"
             x:DataType="viewmodel:MainViewModel"
             >
    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label
            Text="Hello, "
            FontSize="50"/>
            <Label
            Text="{Binding Username}"
            FontSize="50"/>
            <Label
            Text="!"
            FontSize="50"/>
        </HorizontalStackLayout>
        <Button
            Text="Call Message"
            Command="{Binding CallMessage}"
            FontSize="20"
            HeightRequest="20"
            WidthRequest="200"
            Margin="0, 30, 0, 30"
            />
        <Button
            Text="Call Question Message"
            Command="{Binding CallQuestionMessage}"
            FontSize="20"
            HeightRequest="20"
            WidthRequest="200"
            Margin="0, 0, 0, 30"
            />
        <Button
            Text="Call Options Message"
            Command="{Binding CallOptionsMessage}"
            FontSize="20"
            HeightRequest="20"
            WidthRequest="200"
            Margin="0, 0, 0, 30"
            />
    </VerticalStackLayout>
</ContentPage>
